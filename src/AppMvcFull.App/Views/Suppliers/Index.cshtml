@using AppMvcFull.App.Extensions
@using AppMvcFull.App.Utils
@model IEnumerable<AppMvcFull.App.ViewModels.SupplierViewModel>

@{
    ViewData["Title"] = "Index";
}

<div class="text-start">
    <h1 class="display-4">Fornecedor</h1>
    <p class="text-muted">Lista de fornecedores.</p>
    <p class="text-end">
        <a class="btn btn-primary" asp-action="Create"
           customHide-name="@ConstantClaimName.SuppliersClaimName"
           customHide-value="@ConstantClaimValue.Create">
            <span class="fa fa-plus"></span> Adicionar
        </a>
    </p>
</div>
<hr />

<table class="table table-hover">
    <thead class="table-dark">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DocumentNumber)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SupplierType)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Active)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @this.FormatDocument(item.SupplierType,item.DocumentNumber)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.SupplierType)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Active)
                </td>
                <td class="text-end">
                    <a class="btn btn-info" asp-action="Details" asp-route-id="@item.Id"
                   customHide-name="@ConstantClaimName.SuppliersClaimName"
                   customHide-value="@ConstantClaimValue.Read">
                        <span class="fa fa-search"> </span>
                    </a>

                    <a class="btn btn-warning" asp-action="Edit" asp-route-id="@item.Id"
                   customHide-name="@ConstantClaimName.SuppliersClaimName"
                   customHide-value="@ConstantClaimValue.Update">
                        <span class="fa fa-pencil-alt"> </span>
                    </a>

                    <a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.Id"
                   customHide-name="@ConstantClaimName.SuppliersClaimName"
                   customHide-value="@ConstantClaimValue.Delete">
                        <span class="fa fa-trash"> </span>
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>
