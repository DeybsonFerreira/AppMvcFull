@model AppMvcFull.App.ViewModels.SupplierViewModel


<div class="modal-header">
    <h5 class="modal-title">Endereço</h5>
    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
</div>

<form asp-action="UpdateAddress">
    <div class="modal-body">
        <input type="hidden" asp-for="Address.SupplierId" />
        <input type="hidden" asp-for="Address.Id" />

        <partial name="_Address" />
    </div>
    <div class="modal-footer">
        <div class="text-end">
            <input type="button" value="Fechar" class="btn btn-danger" data-bs-dismiss="modal" />
            <input type="submit" value="Atualizar" class="btn btn-success px-5" />
        </div>
    </div>
</form>
