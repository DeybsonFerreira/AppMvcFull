@model AppMvcFull.App.ViewModels.SupplierViewModel

@{
    ViewData["Title"] = "Delete";
}


<div class="text-start">
    <h1 class="display-4">Excluir</h1>
    <p class="text-muted">Deseja realmente excluir este Fornecedor?</p>
</div>
<hr />


<dl class="row">
    <dt class="col-sm-2">
        @Html.DisplayNameFor(model => model.Name)
    </dt>
    <dd class="col-sm-10">
        @Html.DisplayFor(model => model.Name)
    </dd>
    <dt class="col-sm-2">
        @Html.DisplayNameFor(model => model.DocumentNumber)
    </dt>
    <dd class="col-sm-10">
        @Html.DisplayFor(model => model.DocumentNumber)
    </dd>
    <dt class="col-sm-2">
        @Html.DisplayNameFor(model => model.SupplierType)
    </dt>
    <dd class="col-sm-10">
        @Html.DisplayFor(model => model.SupplierType)
    </dd>
    <dt class="col-sm-2">
        @Html.DisplayNameFor(model => model.Active)
    </dt>
    <dd class="col-sm-10">
        @Html.DisplayFor(model => model.Active)
    </dd>
</dl>

<div class="text-start">
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <a class="btn btn-secondary" href="javascript:window.history.back()">  <span class="fa fa-arrow-left"></span> Voltar</a>
        <button class="mx-2 btn btn-danger" type="submit">Confirmar <span class="fa fa-trash"></span></button>
    </form>
</div>

