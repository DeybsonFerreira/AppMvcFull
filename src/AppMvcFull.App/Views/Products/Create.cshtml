@model AppMvcFull.App.ViewModels.ProductViewModel

@{
    ViewData["Title"] = "Create";
}


<div class="text-start">
    <h1 class="display-4">Produto</h1>
    <p class="text-muted">Criação de produtos.</p>
    <hr />
</div>

<div class="row">
    <div class="col-md-4">
        <form enctype="multipart/form-data" asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="SupplierId" class="control-label">Fornecedor</label>
                <select asp-for="SupplierId" class="form-control" asp-items="@(new SelectList(Model.Suppliers,"Id","Name"))">
                    <option></option>
                </select>
                <span asp-validation-for="SupplierId" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <textarea rows="3" maxlength="200" asp-for="Description" class="form-control"></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ImageUpload" class="control-label"></label>
                <input asp-for="ImageUpload" class="form-control custom-file-input" type="file" id="ImageUpload">
                <span asp-validation-for="ImageUpload" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Value" class="control-label"></label>
                <input asp-for="Value" class="form-control" />
                <span asp-validation-for="Value" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="Active" /> @Html.DisplayNameFor(model => model.Active)
                </label>
            </div>

            <div class="form-group mt-3">
                <a class="btn btn-light" asp-action="Index">Voltar</a>
                <input type="submit" value="Cadastrar" class="btn btn-success px-5 float-end" />
            </div>
        </form>
    </div>
</div>

<div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    }
